# Ahava Healthcare Backend - Production Environment Variables
# Copy this file to .env.production and fill in your real values
# NEVER commit .env.production to version control

# ============================================
# Database
# ============================================
# Production PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public&sslmode=require
DATABASE_URL=postgresql://ahava_user:ahava_dev_password@postgres:5432/ahava-healthcare?schema=public

# ============================================
# Authentication & Security
# ============================================
# Generate a strong random 32+ character string for JWT signing
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-32-chars-minimum
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Generate base64-encoded 32-byte key for encryption
# Use: openssl rand -base64 32
ENCRYPTION_KEY=base64-encoded-32-byte-key

# Generate hex-encoded 16-byte salt for IV
# Use: openssl rand -hex 16
ENCRYPTION_IV_SALT=hex-encoded-16-byte-salt

# ============================================
# Paystack Payment Processing
# ============================================
# Get these from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key
# Webhook secret from Paystack webhook settings
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# ============================================
# Redis (Cache & Queue)
# ============================================
# Format: redis://:PASSWORD@HOST:6379/DATABASE
REDIS_URL=redis://:ahava_redis_pass@redis:6379/0

# ============================================
# Email (SMTP)
# ============================================
# Configure with your email provider (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM="Ahava Healthcare <noreply@ahavahealthcare.co.za>"

# ============================================
# Expo Push Notifications
# ============================================
# Get from: https://expo.dev/accounts/[your-account]/settings/access-tokens
EXPO_ACCESS_TOKEN=your_expo_access_token

# ============================================
# Server Configuration
# ============================================
PORT=4000
NODE_ENV=production
TIMEZONE=Africa/Johannesburg

# ============================================
# API Configuration
# ============================================
# Your production API base URL (for CORS, webhooks, etc.)
OPENAPI_BASE_URL=https://api.ahavahealthcare.co.za

# ============================================
# OAuth2 PKCE (if using)
# ============================================
OAUTH_PKCE_CLIENT_ID=your-oauth-client-id
OAUTH_PKCE_ISSUER=https://your-auth-provider.com
OAUTH_REDIRECT_URI=https://ahavahealthcare.co.za/auth/callback

# ============================================
# Storage
# ============================================
EXPORT_STORAGE_DIR=./exports

# ============================================
# Rate Limiting (optional overrides)
# ============================================
# RATE_LIMIT_SKIP=false

